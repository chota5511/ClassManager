<Window x:Class="ClassManager.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassManager"
        mc:Ignorable="d"
        Title="Đăng nhập" Height="190" Width="350"
        ResizeMode="CanMinimize">
    <Grid>
        <Label Name="lbUserID" Content="Mã số sinh viên" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="25" Margin="40,30,0,0"/>
        <Label Name="lbPassword" Content="Mật khẩu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="25" Margin="40,65,0,0"/>
        <TextBox Name="txtUserID" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="25" Margin="140,30,0,0"/>
        <PasswordBox Name="txtPassword" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="25" Margin="140,65,0,0"/>
        <Button Name="btLogin" Click="btLogin_Click" HorizontalAlignment="Left" Content="Đăng nhập" VerticalAlignment="Top" Width="80" Height="30" Margin="40,95,0,0"/>
        <Button Name="btExit" Click="Button_Close" HorizontalAlignment="Left" Content="Thoát" VerticalAlignment="Top" Width="80" Height="30" Margin="210,95,0,0"/>
    </Grid>
</Window>
